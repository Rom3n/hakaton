<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
				xmlns:pages="clr-namespace:MobileTemplate.UI.Pages;assembly=MobileTemplate"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MobileTemplate.UI.Pages.News.NewsPage"
			 xmlns:fastGrid="clr-namespace:MobileTemplate.UI.Controls.FastGrid;assembly=MobileTemplate"
			 Title="News">

	<ScrollView>

		<StackLayout>

			<fastGrid:FastGridView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                               IsPullToRefreshEnabled="False" x:Name="fastGridView"
                               ItemsSource="{Binding ItemsSource}" 
                               ItemSelectedCommand="{Binding ItemSelectedCommand}"
                               RowSpacing="1"
                               ColumnSpacing="1"
                               AbsoluteLayout.LayoutBounds="0,0,1,1"
                               AbsoluteLayout.LayoutFlags="All"
                               />


		</StackLayout>
	</ScrollView>
</pages:BasePage>